generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model User {
    id      String @id @default(cuid())
}

model Ticket{
    id String @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    title String
    content String @db.VarChar(1024)
    status TicketStatus @default(OPEN)
    deadline String
    bounty Int
}

enum TicketStatus {
    OPEN
    IN_PROGRESS
    DONE
}